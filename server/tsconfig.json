{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  }
,
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "coverage"
  ]
}